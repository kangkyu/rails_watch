.race
  = form_tag complete_task_path(task), method: :put do
    - if task.title == "cancel"
      %strong
        no broadcasting on date
    - else

      - if current_user
        = link_to show_date(task.date), edit_task_path(task)
        - if task.statuses.find_by(user_id: current_user.id).completed
          w
          = button_tag "undo", value: false, class: "buttons"
        - else
          o
          = button_tag "watch", value: true, class: "buttons"
      - else
        = show_date(task.date)
  
      = ": Episode #{task.episode} : #{task.episode + 132}"
      - if task.title
        = link_to task.title, "https://www.youtube.com/results?search_query=런닝맨 #{task.title}&filters=playlist"
