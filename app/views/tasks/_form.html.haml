= form_for @task do |f|
  .field
    = f.label 'id'
    = f.text_field :id
  .field
    = f.label 'episode'
    = f.text_field :episode
  .field
    = f.label 'date'
    = f.text_field :date
  .field
    = f.label 'title'
    = f.text_field :title
  .field
    = f.check_box :completed
    = f.label :completed, 'watched'
  .actions
    = f.submit